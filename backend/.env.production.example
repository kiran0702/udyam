# Production Environment Variables for Render - Monorepo Deployment

# Database URL (provided by Render PostgreSQL)
DATABASE_URL="postgresql://user:password@host:port/database"

# Node Environment
NODE_ENV="production"

# Port (Render provides this automatically)
PORT=10000

# CORS Configuration - Frontend URL
FRONTEND_URL="https://udyam-frontend.onrender.com"

# Security Configuration
JWT_SECRET="your-super-secret-jwt-key-at-least-32-characters"
SESSION_SECRET="your-super-secret-session-key-at-least-32-characters"

# API Configuration
API_VERSION="v1"
LOG_LEVEL="info"

# Rate Limiting
RATE_LIMIT_WINDOW="15"
RATE_LIMIT_MAX_REQUESTS="100"
